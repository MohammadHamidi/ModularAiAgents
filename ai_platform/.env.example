# Database Configuration
# For Docker: use postgres service name as host
# For local development: use localhost
DATABASE_URL=postgresql+asyncpg://user:pass@postgres:5432/ai_platform

# LiteLLM API Configuration
LITELLM_API_KEY=your_api_key_here
LITELLM_BASE_URL=https://api.avalai.ir/v1
LITELLM_MODEL=gemini-2.5-flash-lite-preview-09-2025

# Session Configuration (optional)
MAX_SESSION_MESSAGES=30
SESSION_TTL_SECONDS=14400

# Agent Configuration
# Specify which config file to use for the chat agent
# Options:
#   - agent_config.yaml (default)
#   - personalities/professional_assistant.yaml
#   - personalities/friendly_tutor.yaml
#   - personalities/minimal_assistant.yaml
#   - path/to/your/custom_config.yaml
AGENT_CONFIG_FILE=agent_config.yaml
