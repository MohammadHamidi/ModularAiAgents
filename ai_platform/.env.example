# Database Configuration (REQUIRED)
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ai_platform

# LiteLLM Configuration
LITELLM_API_KEY=sk-your-api-key-here
LITELLM_BASE_URL=https://openrouter.ai/api/v1
LITELLM_MODEL=google/gemini-2.5-flash-preview-09-2025

# Gateway Port (default: 8000)
GATEWAY_PORT=8000

# Session Configuration
MAX_SESSION_MESSAGES=30
SESSION_TTL_SECONDS=14400

# Executor Mode: pydantic_ai (default) or langchain_chain
EXECUTOR_MODE=pydantic_ai

# LightRAG Configuration (Optional)
LIGHTRAG_BASE_URL=https://knowledgsafiran.pish.run/
LIGHTRAG_USERNAME=
LIGHTRAG_PASSWORD=
LIGHTRAG_API_KEY_HEADER_VALUE=
LIGHTRAG_BEARER_TOKEN=

# Konesh CSV Path (Optional)
KONESH_CSV_PATH=./konesh_actions.csv
